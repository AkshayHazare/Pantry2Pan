<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@android:color/holo_orange_light"
    tools:context="com.amazonaws.mobilehelper.auth.signin.userpools.ForgotPasswordActivity">

    <TextView
        android:id="@+id/forgot_password_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/forgot_password_header"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:layout_above="@+id/forgot_password_message"
        android:layout_centerHorizontal="true" />

    <Space
        android:id="@+id/forgot_password_space1"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/forgot_password_title"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/forgot_password_message"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:text="@string/forgot_password_body"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/black"
        android:layout_above="@+id/forgot_password_password"
        android:layout_alignLeft="@+id/forgot_password_password"
        android:layout_alignStart="@+id/forgot_password_password" />

    <Space
        android:id="@+id/forgot_password_space2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_pools_activity_intra_group_separation"
        android:layout_below="@id/forgot_password_message"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/forgot_password_password"
        android:layout_width="300dp"
        android:layout_height="@dimen/user_pools_activity_text_height"
        android:layout_marginBottom="13dp"
        android:hint="@string/sign_in_password"
        android:inputType="textPassword"
        android:layout_above="@+id/forgot_password_verification_code"
        android:layout_alignLeft="@+id/forgot_password_verification_code"
        android:layout_alignStart="@+id/forgot_password_verification_code" />

    <Space
        android:id="@+id/forgot_password_space3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_pools_activity_intra_group_separation"
        android:layout_below="@id/forgot_password_password" />

    <EditText
        android:id="@+id/forgot_password_verification_code"
        android:layout_width="300dp"
        android:layout_height="@dimen/user_pools_activity_text_height"
        android:layout_marginBottom="42dp"
        android:hint="@string/forgot_password_input_code_hint"
        android:inputType="number"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_above="@+id/forgot_password_button"
        android:layout_alignLeft="@+id/forgot_password_button"
        android:layout_alignStart="@+id/forgot_password_button" />

    <Space
        android:id="@+id/forgot_password_space4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_pools_activity_intra_group_separation"
        android:layout_below="@id/forgot_password_verification_code" />

    <Button
        android:id="@+id/forgot_password_button"
        android:layout_width="300dp"
        android:layout_height="@dimen/user_pools_activity_button_height"
        android:background="@drawable/redbutton"
        android:onClick="forgotPassword"
        android:text="@string/forgot_password_button_hint"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/user_pools_activity_button_text_size"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="132dp" />

</RelativeLayout>
