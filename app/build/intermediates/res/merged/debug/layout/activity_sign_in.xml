<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signinRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_light"
    android:elevation="1dp"
    tools:context=".auth.signin.SignInActivity">


    <EditText
        android:id="@+id/signIn_editText_email"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Email or Username"
        android:inputType="textEmailAddress"
        android:visibility="visible"
        android:layout_marginTop="61dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/signIn_editText_password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/signIn_editText_email"
        android:layout_alignLeft="@+id/signIn_editText_email"
        android:layout_alignStart="@+id/signIn_editText_email" />

    <Button
        android:id="@+id/signIn_imageButton_login"
        android:layout_width="@dimen/sign_in_button_width"
        android:layout_height="@dimen/sign_in_button_height"
        android:background="@drawable/redbutton"
        android:text="Sign in Button"
        android:textColor="@android:color/white"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/signIn_textView_CreateNewAccount"
        android:layout_centerHorizontal="true" />


    <TextView
        android:id="@+id/signIn_textView_CreateNewAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:text="@string/sign_in_new_account"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="@android:color/black"
        android:layout_below="@+id/signIn_editText_password"
        android:layout_alignLeft="@+id/signIn_editText_password"
        android:layout_alignStart="@+id/signIn_editText_password" />

    <TextView
        android:id="@+id/signIn_textView_ForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/signIn_editText_password"
        android:layout_alignRight="@+id/signIn_editText_password"
        android:layout_below="@+id/signIn_editText_password"
        android:layout_weight="1"
        android:gravity="right"
        android:text="@string/sign_in_forgot_password"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_above="@+id/signIn_imageButton_login"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="20dp"
        android:text="@string/sign_in_or"
        android:textAppearance="?android:textAppearanceSmall" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="46dp"
        custom:srcCompat="@drawable/logo" />

</RelativeLayout>


