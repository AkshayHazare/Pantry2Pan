<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/userRecipeRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserRecipeActivity"
    android:background="@android:color/holo_orange_light">

    <TextView
        android:id="@+id/recipetextView"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp"
        android:text="  You can Make :  "
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginTop="19dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/backbuttonrecipe"
        android:layout_toEndOf="@+id/backbuttonrecipe" />

    <ListView
        android:id="@+id/recipeListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/holo_orange_light"
        android:layout_below="@+id/backbuttonrecipe" />

    <Button
        android:id="@+id/backbuttonrecipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp"
        android:text="Back"
        android:background="@layout/redbutton"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/recipetextView"
        android:layout_alignBottom="@+id/recipetextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
