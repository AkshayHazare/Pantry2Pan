<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/userHomeRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".UserHomeActivity">

    <Button
        android:id="@+id/pantryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PANTRY"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="325dp"
        android:layout_marginBottom="40dp"
        android:layout_above="@+id/logoutbutton"
        android:layout_centerHorizontal="true"
        android:background="@layout/redbutton"
        android:textColor="@android:color/white"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/recipeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pantryButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp"
        android:background="@layout/redbutton"
        android:text="  What can I cook Today ?  "
        android:textColor="@android:color/white"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="412dp" />

    <Button
        android:id="@+id/logoutbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pantryButton"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/pantryButton"
        android:layout_marginBottom="56dp"
        android:text="Log Out"
        android:background="@layout/redbutton"
        android:textColor="@android:color/white"
        android:textStyle="bold"/>

</RelativeLayout>
